<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.noerror.Mapper.common_mapper">


<!-- 관리자 리스트 전체출력 -->
<select id="emp_list" resultType="kr.co.noerror.DTO.employee_DTO">
	SELECT * FROM EMPLOYEE ORDER BY EIDX DESC
</select>

<!-- 창고 리스트 전체출력 -->
<select id="warehouse_list" resultType="kr.co.noerror.DTO.WareHouse_DTO">
	SELECT * FROM WAREHOUSE 
	<if test="wh_tp == 'in_wh'">
		<where>
			WH_TYPE = '입고창고'
		</where>
	</if>
	<if test="wh_tp == 'mt_wh'">
		<where>
			WH_TYPE = '부자재창고'
		</where>
	</if>
	ORDER BY WIDX DESC
</select>


</mapper>